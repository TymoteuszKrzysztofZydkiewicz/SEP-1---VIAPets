<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<!-- This FXML file defines the layout for table view of all pets.
     Each table column contains information about the pets such as
     pet, name, age, color, gender, price and type (kennel or for sale).

     Action buttons like add pet, remove pet, edit pet, and view pet are also defined here.
-->
<AnchorPane prefHeight="600.0" prefWidth="902.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PetListController">
    <children>

        <TableView id="petTableView" fx:id="petsTableView" layoutX="16.0" layoutY="90.0" prefHeight="419.0" prefWidth="870.0">
            <columns>
                <TableColumn fx:id="petClass" prefWidth="123.9" text="Pet" />
                <TableColumn fx:id="petNameColumn" prefWidth="123.9" text="Name" />
                <TableColumn fx:id="petAgeColumn" prefWidth="123.9" text="Age" />
                <TableColumn fx:id="petColorColumn" prefWidth="123.9" text="Color" />
                <TableColumn fx:id="petGenderColumn" prefWidth="123.9" text="Gender" />
                <TableColumn fx:id="petPriceColumn" prefWidth="123.9" text="Price" />
                <TableColumn fx:id="petTypeColumn" prefWidth="123.9" text="Type" />
            </columns>
        </TableView>

        <Button fx:id="editPetButton" layoutX="300.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleEditPet" text="Edit Pet" />
        <Button fx:id="viewPetButton" layoutX="500.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleViewPet" text="View Pet" />
      <Button fx:id="removeButton" layoutX="700.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleRemovePet" text="Remove Pet" />
      <Label alignment="CENTER" layoutX="252.0" layoutY="14.0" prefHeight="50.0" prefWidth="398.0" text="Pets list" textAlignment="CENTER">
         <font>
            <Font size="38.0" />
         </font>
      </Label>
      <Button fx:id="addPetButton1" layoutX="100.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleAddPet" text="Add Pet" />
    </children>
</AnchorPane>
