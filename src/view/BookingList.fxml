<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- This FXML file defines the layout for table view of all bookings.
     Each table column contains information about the booking such as
     pet, pet's name, customer's name, start date, end date and price.

     Action buttons like add booking, remove booking, edit booking, and view booking are also defined here.
-->

<AnchorPane prefHeight="600.0" prefWidth="902.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.BookingListController">
    <children>

        <TableView id="bookingTableView" fx:id="bookingTableView" layoutX="16.0" layoutY="90.0" prefHeight="419.0" prefWidth="870.0">
            <columns>
                <TableColumn fx:id="petBooking" prefWidth="144.8" text="Pet" />
                <TableColumn fx:id="petNameBooking" prefWidth="144.8" text="Pet's name" />
                <TableColumn fx:id="customerNameBooking" prefWidth="144.8" text="Customer's name" />
                <TableColumn fx:id="startDate" prefWidth="144.8" resizable="false" text="Start Date" />
                <TableColumn fx:id="endDate" prefWidth="144.8" text="End Date" />
                <TableColumn fx:id="bookingPrice" prefWidth="144.8" text="Price" />
            </columns>
        </TableView>

        <Button fx:id="addBookingButton" layoutX="100.0" layoutY="529.0" mnemonicParsing="false" onAction="#handleAddBooking" text="Add Booking" />
        <Button fx:id="removeBookingButton" layoutX="700.0" layoutY="529.0" mnemonicParsing="false" onAction="#handleRemoveBooking" text="Remove Booking" />
        <Button fx:id="editBooking" layoutX="300.0" layoutY="529.0" mnemonicParsing="false" onAction="#handleEditBooking" text="Edit Booking" />
        <Button fx:id="viewBooking" layoutX="500.0" layoutY="529.0" mnemonicParsing="false" onAction="#handleViewBooking" text="View Booking" />
      <Label alignment="CENTER" layoutX="296.0" layoutY="14.0" prefHeight="37.0" prefWidth="312.0" text="Bookings list" textAlignment="CENTER">
         <font>
            <Font size="38.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
